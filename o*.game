<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>◯×ゲーム</title>
<a href="index.html">errorくんのホームページ</a>
    <style>
        table {
            border-collapse: collapse;
            margin: 20px auto;
        }
        td {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 24px;
            border: 1px solid black;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">まるばつゲーム</h1>
    <table id="board">
        <tr>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
        </tr>
        <tr>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
        </tr>
        <tr>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
            <td onclick="makeMove(this)"></td>
        </tr>
    </table>
    <script>
        let turn = 'あなた';

        function makeMove(cell) {
            if(cell.innerHTML === '' && turn === 'あなた') {
                cell.innerHTML = '○';
                turn = 'CPU';
                setTimeout(cpuMove, 500);
            }
        }

        function cpuMove() {
            let cells = document.querySelectorAll("td");
            let emptyCells = [];
            cells.forEach(cell => {
                if (cell.innerHTML === '') {
                    emptyCells.push(cell);
                }
            });

            if (emptyCells.length === 0) {
                return;
            }

            let randomCell = emptyCells[Math.floor(Math.random() * emptyCells.length)];
            randomCell.innerHTML = '×';
            turn = 'あなた';
        }
    </script>
</body>
</html>
